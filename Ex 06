#include <iostream>
using namespace std;

int main() {
    int numero;
    
    cout << "Digite um número: ";
    cin >> numero;
    
    if (numero % 3 == 0 && numero % 7 == 0) {
        cout << "O número " << numero << " é divisível por 3 e por 7." << endl;
    } else if (numero % 3 == 0) 
    {
        cout << "O número " << numero << " é divisível apenas por 3." << endl;
    } else if (numero % 7 == 0) {
        
        cout << "O número " << numero << " é divisível apenas por 7." << endl;
    } else {
        
        cout << "O número " << numero << " não é divisível nem por 3 nem por 7." << endl;
    }

    return 0;
}
