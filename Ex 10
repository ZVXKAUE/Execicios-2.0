#include <iostream>

using namespace std;

int main() {
    int numero;

    cout << "Digite um número: ";
    cin >> numero;

    if (numero > 20) {
        cout << "O número é maior do que 20." << endl;
    } else if (numero == 20) {
        cout << "O número é igual a 20." << endl;
    } else {
        cout << "O número é menor do que 20." << endl;
    }

    return 0;
}
