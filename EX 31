    } else if (sexo == 'F' || sexo == 'f') {
      eres
        pesoIdeal = (62.1 * altura) - 44.7;
        cout << "Peso ideal para uma mulher com " << altura << " metros de altura: " << pesoIdeal << " kg" << endl;
    } else {
        cout << "Sexo invÃ¡lido! Digite 'M' para masculino ou 'F' para feminino." << endl;
